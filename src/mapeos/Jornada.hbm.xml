<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="datos.Jornada" table="jornada">
		<id column="idJornada" name="idJornada">
		  <generator class="identity"/>
		</id>
		<property column="fecha" name="fecha" type="calendar"/>
		<!--<property column="idEmpleado" name="empleado" type="int"/> -->
		<many-to-one name="turno" class="datos.Turno" column="idTurno" not-null="true"/>
		<set name ="empleados" table="empleado" inverse="true" lazy="true" fetch="select">
        <key>
            <column name ="idJornada" not-null="false" />
        </key>
        <one-to-many class="datos.Empleado" />
        </set>
	</class>
</hibernate-mapping>